<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/settings_loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <io.github.pelmenstar1.digiDict.ui.ErrorContainer
        android:id="@+id/settings_errorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:errorText="@string/settings_failedToLoadSettings" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Quiz settings -->

        <TextView
            android:id="@+id/settings_quizTitle"
            style="@style/Widget.DigiDictionary.SettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/settings_scorePointsPerCorrectAnswer_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_points_per_correct_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_quizTitle" />

        <TextView
            android:id="@+id/settings_scorePointsPerCorrectAnswer_prefix"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/settings_scorePointsPerCorrectAnswer_prefix"
            app:layout_constraintBottom_toBottomOf="@+id/settings_scorePointsPerCorrectAnswer_icon"
            app:layout_constraintStart_toEndOf="@id/settings_scorePointsPerCorrectAnswer_icon"
            app:layout_constraintTop_toTopOf="@+id/settings_scorePointsPerCorrectAnswer_icon" />

        <Spinner
            android:id="@+id/settings_scorePointsPerCorrectAnswer_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:entries="@array/settings_from_1_to_10"
            app:layout_constraintBottom_toBottomOf="@+id/settings_scorePointsPerCorrectAnswer_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/settings_scorePointsPerCorrectAnswer_icon" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/settings_scorePointsPerCorrectAnswer_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="settings_scorePointsPerCorrectAnswer_icon,settings_scorePointsPerCorrectAnswer_prefix,settings_scorePointsPerCorrectAnswer_spinner" />

        <ImageView
            android:id="@+id/settings_scorePointsPerWrongAnswer_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_points_per_wrong_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_scorePointsPerCorrectAnswer_barrier" />

        <TextView
            android:id="@+id/settings_scorePointsPerWrongAnswer_prefix"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/settings_scorePointsPerWrongAnswer_prefix"
            app:layout_constraintBottom_toBottomOf="@+id/settings_scorePointsPerWrongAnswer_icon"
            app:layout_constraintStart_toEndOf="@+id/settings_scorePointsPerWrongAnswer_icon"
            app:layout_constraintTop_toTopOf="@+id/settings_scorePointsPerWrongAnswer_icon" />

        <Spinner
            android:id="@+id/settings_scorePointsPerWrongAnswer_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:entries="@array/settings_from_1_to_10"
            app:layout_constraintBottom_toBottomOf="@+id/settings_scorePointsPerWrongAnswer_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/settings_scorePointsPerWrongAnswer_icon" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/settings_scorePointsPerWrongAnswer_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="settings_scorePointsPerWrongAnswer_icon,settings_scorePointsPerWrongAnswer_prefix,settings_scorePointsPerWrongAnswer_spinner" />

        <!-- Remote dict. provider -->

        <TextView
            android:id="@+id/settings_remoteDictProviderTitle"
            style="@style/Widget.DigiDictionary.SettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/remoteDictProviderShort"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_scorePointsPerWrongAnswer_barrier" />

        <ImageView
            android:id="@+id/settings_openBrowserInApp_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_open_browser_in_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_remoteDictProviderTitle" />

        <TextView
            android:id="@+id/settings_openBrowserInApp_prefix"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/settings_openBrowserInApp"
            app:layout_constraintBottom_toBottomOf="@id/settings_openBrowserInApp_switch"
            app:layout_constraintStart_toEndOf="@+id/settings_openBrowserInApp_icon"
            app:layout_constraintTop_toTopOf="@id/settings_openBrowserInApp_switch" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settings_openBrowserInApp_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_remoteDictProviderTitle" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/settings_openBrowserInApp_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="settings_openBrowserInApp_prefix,settings_openBrowserInApp_switch" />

        <!-- Remind me! -->

        <TextView
            android:id="@+id/settings_remindTitle"
            style="@style/Widget.DigiDictionary.SettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remindRecords_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_openBrowserInApp_barrier" />

        <ImageView
            android:id="@+id/settings_remindMaxItems_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_list_numbered"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_remindTitle" />

        <TextView
            android:id="@+id/settings_remindMaxItems_prefix"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/settings_remindMaxItems"
            app:layout_constraintBottom_toBottomOf="@id/settings_remindMaxItems_icon"
            app:layout_constraintStart_toEndOf="@id/settings_remindMaxItems_icon"
            app:layout_constraintTop_toTopOf="@id/settings_remindMaxItems_icon" />

        <Spinner
            android:id="@+id/settings_remindMaxItems_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:entries="@array/settings_from_1_to_30"
            app:layout_constraintBottom_toBottomOf="@id/settings_remindMaxItems_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/settings_remindMaxItems_icon" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/settings_remindMaxItems_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="settings_remindMaxItems_icon,settings_remindMaxItems_prefix,settings_remindMaxItems_spinner" />

        <!-- Backup settings -->

        <TextView
            android:id="@+id/settings_backupTitle"
            style="@style/Widget.DigiDictionary.SettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_backupTitle"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_remindMaxItems_barrier" />

        <Button
            android:id="@+id/settings_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_import"
            app:layout_constraintEnd_toStartOf="@+id/quiz_centerGuide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_backupTitle" />

        <Button
            android:id="@+id/settings_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_export"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/quiz_centerGuide"
            app:layout_constraintTop_toTopOf="@+id/settings_import" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/quiz_centerGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/settings_version"
            style="@style/TextAppearance.Material3.LabelMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textIsSelectable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1.0 (Debug)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>