<resources>
    <!-- Base application theme. -->
    <style name="Theme.DigiDictionary" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryContainer">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="colorError">@color/color_error</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.DigiDictionary.WidgetListContainerBase" parent="@android:style/Theme.DeviceDefault">
        <item name="listWidgetRadius">16dp</item>
        <item name="listWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.DigiDictionary.AppWidgetContainer" parent="Theme.DigiDictionary.WidgetListContainerBase">
        <item name="listWidgetPadding">8dp</item>
    </style>
</resources>